<div class="container p-4">
    <div class="row row-cols-3">
        {{#each links}}
          <div class="col mb-3">
                              <div class="card md-3">
              <h3 class="card-header" _msthash="1543503" _msttexthash="151151">Codigo: {{codificacion}}</h3>
              <div class="card-body">
                <h5 class="card-title" _msthash="1919515" _msttexthash="852384">Nombre: {{equipo}} </h5>
                <h6 class="card-subtitle text-muted" _msthash="1921049" _msttexthash="870571">  Marca: {{marca}}</h6>
                <hr>
                <h6 class="card-subtitle text-muted" _msthash="1921049" _msttexthash="870571">  Modelo: {{modelo}} </h6>
              </div>
                <div class="card-body">
                <p class="card-text" _msthash="1885689" _msttexthash="8501909">Serial: {{serial}}</p>
              </div>
              <div class="card-body">
                <a  href="/links/edit/{{id}}" class="btn btn-warning" >editar</a>
                <a href="/links/delete/{{id}}" class="btn btn-danger">eliminar</a>
              </div>
              <div class="card-footer text-muted" _msthash="1664169" _msttexthash="144235"> Creado: {{timeago create_at}} </div>
            </div>
          </div>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>no hay equipos registrados</p>
          <a class="btn btn-outline-primary" href="/links/add"> crear uno</a>
        </div>
      </div>
        {{/each}}
    </div>
</div>